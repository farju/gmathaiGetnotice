<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/cell_mainSettings_titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|start"
        android:textColor="@color/DarkSlateGray"
        android:textSize="21sp"
        tools:text="Color Palette" />

    <TextView
        android:id="@+id/cell_mainSettings_subtitleTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical|start"
        android:textColor="@color/LightSlateGray"
        android:textSize="14sp"
        tools:text="Just some random text / Just some random text / Just some random text / Just some random text \n" />


</LinearLayout>