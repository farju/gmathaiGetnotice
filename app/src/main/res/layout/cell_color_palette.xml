<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="90dp"
    android:padding="16dp">

    <CheckBox
        android:id="@+id/cell_colorPalette_checkBox"
        android:layout_width="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/cell_colorPalette_titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/cell_colorPalette_checkBox"
        android:layout_toStartOf="@id/cell_colorPalette_checkBox"
        android:gravity="center_vertical|start"
        android:textColor="@color/DarkSlateGray"
        android:textSize="21sp"
        tools:text="Black &amp; White" />

    <com.mgn.get_noticed.util.AutoHeightGridView
        android:id="@+id/cell_colorPalette_gridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_alignParentStart="true"
        android:layout_below="@id/cell_colorPalette_titleTextView"
        android:layout_marginTop="8dp"
        android:columnWidth="24dp"
        android:gravity="start"
        android:horizontalSpacing="8dp"
        android:numColumns="auto_fit"
        android:verticalSpacing="8dp" />


</RelativeLayout>